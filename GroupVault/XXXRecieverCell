    func messageViewForReciever (message: Message) {
        
        recieverMessageLabel.textAlignment = NSTextAlignment.Left
        recieverMessageLabel.font = UIFont.boldSystemFontOfSize(18)
        recieverMessageLabel.layer.cornerRadius = 4.0
        recieverMessageLabel.backgroundColor = Color.darkBlueMessageColor()
        recieverUsernameLabel.text = message.senderName
        recieverUsernameLabel.font = UIFont.boldSystemFontOfSize(12)
        recieverUsernameLabel.textColor = UIColor.blackColor()
        recieverDateLabel.text = message.dateString
        recieverDateLabel.font = UIFont.boldSystemFontOfSize(12)
        recieverDateLabel.textColor = Color.lightGreyMessageColor()
        
//        hiddenRecieverMessage(false)
//        hiddenSenderMessage(true)
    }
    
